# For xdg stuff
export DE=generic

# For QT apps to find GTK style
export GTK2_RC_FILES="$HOME/.gtkrc-2.0"

# For silly Java which can't deal with some window managers
wmname LG3D &

# Load in resources
xrdb -merge ~/.Xresources

# Keybindings
setxkbmap -option ctrl:nocaps &

# Set up monitors
~/bin/autorandr --force --change --default default &

# Screensaver
xscreensaver -nosplash &

# f.lux
xflux -z 19123 &

# Automount stuff
usermount &

# Start a dbus session
eval $(dbus-launch --sh-syntax --exit-with-session)

# NetworkManager
nm-applet &

# PulseAudio
start-pulseaudio-x11 &

# Synchronize X cut and paste buffers
autocutsel -fork &
autocutsel -selection PRIMARY -fork &

# Touchpad settings
synclient CoastingSpeed=0 PalmDetect=1 TapButton1=0 TapButton2=0 TapButton3=0 HorizTwoFingerScroll=1

exec i3
